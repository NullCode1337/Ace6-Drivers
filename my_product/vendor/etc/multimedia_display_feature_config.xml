<?xml version="1.0" encoding="UTF-8"?>

<filter-conf>
    <version>20251030</version>
    <toggle>1</toggle>
    <features>
        <feature name="GpuSwFence" enable="1">
        </feature>

        <feature name="BindCore" enable="0">
            <!-- big core index, start from 0 -->
            <bigcore_id>4</bigcore_id>
            <bigcore_id>5</bigcore_id>
            <bigcore_id>6</bigcore_id>
            <bigcore_id>7</bigcore_id>
        </feature>

        <feature name="DynamicBuffer" enable="1">
        </feature>

        <feature name="LocalHdr" enable="1">
            <support10bit>enable</support10bit>
        </feature>

        <feature name="OplusFeature2Flag" enable="1">
            <disableDeepcache>0</disableDeepcache>
        </feature>

        <feature name="OplusDEE" enable="1">
            <DC>enable</DC>
            <globalLTM>enable</globalLTM>
        </feature>

        <feature name="curtain" enable="1">
            <application name="com.tencent.qqlive">
                <scene type="FuzzyLayer">
                    <layer>VideoDetailKmmActivityBk</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
            </application>
            <application name="com.youku.phone">
                <scene type="FuzzyLayer">
                    <layer>DetailActivity</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
            </application>
            <application name="tv.danmaku.bili">
                <scene type="FuzzyLayer">
                    <layer>VideoDetailsActivity</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
                <scene type="FuzzyLayer">
                    <layer>LiveRoomActivityV3</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
                <scene type="FuzzyLayer">
                    <layer>BangumiDetailActivityV3</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
                <scene type="FuzzyLayer">
                    <layer>StoryVideoActivity</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
                <scene type="FuzzyLayer">
                    <layer>UnitedBizDetailsActivity</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
                <scene type="FuzzyLayer">
                    <layer>StoryTransparentActivity</layer>
                    <action>
                        <mode>SurfaceView</mode>
                    </action>
                </scene>
            </application>
        </feature>

        <feature name="HdrGeneric" enable="1">
        </feature>

    </features>
</filter-conf>
